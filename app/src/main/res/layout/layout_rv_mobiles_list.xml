<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/menucardId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:paddingTop="5dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/idtrvusedstatus"
                        android:layout_width="60dp"
                        android:layout_height="23dp"
                        android:background="@color/greentype"
                        android:text="Used"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="16dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/idrvimageviewmoblist"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/abc_vector_test" />


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/idtrvbrandname"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="Samsung"/>

                </LinearLayout>


                <TextView

                    android:id="@+id/idrvbrandmodel"
                    android:paddingLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:text="S8 Plus"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/idrvstorage"
                    android:paddingLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:text="32GB"/>
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="2dp"
                    android:id="@+id/idrvbrandcolor"
                    android:paddingLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:text="Black"/>

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/idrvseller"
                    android:paddingLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:text="Seller"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/idFollower"
                    android:paddingLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:text="0"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:id="@+id/ratingBarL"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:saveEnabled="true"
                        android:progressTint="#FFB300"
                        android:numStars="5"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/txtRating"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_weight="1"
                        android:id="@+id/idrvshopopen"
                        android:paddingLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#009624"
                        />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/idrvdiscount"
                        android:paddingLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#757575"
                        android:text="Discount 50.10%"/>
                </LinearLayout>


                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:id="@+id/idrvprice"
                    android:paddingLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/redish"
                    android:text="Rs 20000"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/lightgrey"
            android:layout_height="3dp">

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>